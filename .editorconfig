# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Common settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Python settings
[*.{py,pyi}]
max_line_length = 88
indent_size = 4
